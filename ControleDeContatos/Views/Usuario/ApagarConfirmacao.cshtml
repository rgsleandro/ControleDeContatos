@model UsuarioModel

@{
    ViewData["Title"] = "Confirmação Apagar Usuário";
}

<div class="text-center">
    <h3>Você deseja apagar o usuário @Model.Nome permanentemente? </h3>
</div>
<a class="btn btn-danger btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar</a>
<a class="btn btn-primary btn-block" asp-action="Apagar" asp-controller="Usuario" asp-route-id="@Model.Id" role="button">Confirmar</a>